{
    "name": "samuel-stidham/url-shortener",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SamuelStidham\\UrlShortener\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SamuelStidham\\UrlShortener\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Samuel Stidham",
            "email": "samuel.stidham@snhu.edu"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "phpstan/phpstan": "^2.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "friendsofphp/php-cs-fixer": "^3.89"
    },
    "prefer-stable": true,
    "scripts": {
         "analyse": "phpstan analyse --memory-limit=1G src tests",
        "cs": "phpcs --standard=PSR12 src tests",
        "cs-check": "phpcs --standard=PSR12 src tests -v --colors",
        "cs-report": "phpcs --standard=PSR12 --report=summary src tests",
        "fix-cs": "php-cs-fixer fix --config=.php-cs-fixer.dist.php src tests",
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html reports/coverage"
    }
}
